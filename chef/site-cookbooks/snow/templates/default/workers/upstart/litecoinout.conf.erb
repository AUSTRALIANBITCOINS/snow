start on startup
env NAME=snow-litecoinout
env NODE_ENV=<%= node.chef_environment %>
env DEBUG=*
env HOME=/home/ubuntu
chdir <%= node[:snow][:workers][:app_directory] %>/current/workers

script
    echo $$ > /var/run/$NAME.pid
    sudo -Eu ubuntu /usr/bin/nodejs bin/litecoinout >> /var/log/$NAME.log
end script

post-stop script
    rm -f /var/run/$NAME.pid
end script
