#area > .auth-login
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .email, .password, .otp
        input
            max-width 30em

    .help-block
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-block
        visibility visible

    .new-user
        position relative
        top -10px

    .otp
        states wrong, invalid, locked-out

#area > .auth-register
    states submitted
    max-width: 550px
    padding: 19px 0px 29px 100px
    margin: 40px auto 20px
    border: 1px solid #e5e5e5
    border-radius: 5px
    box-shadow: 0 1px 2px rgba(0,0,0,.05)
    background-color #fff

    .submitted
        max-width 30em

    .register-form
        button
            width 300px

        input[type="text"], 
        input[type="email"], 
        input[type="password"]
            width 285px

        .terms label
            font-weight normal

        label
            font-weight bold

        h3
            margin-bottom 20px

    .help-block
        max-width 220px
        font-size 90%
        margin-bottom 11px
        visibility hidden

    .email .help-block
        visibility visible

    .existing-container
        padding-top 1em

    .existing
        position relative
        top -15px

#area > .auth-verifyphone
    states texted slow voice

    form
        states loading

    .phone
        .number
            states locked-out

    .verify
        .code
            states wrong

#area > .auth-resetpassword
    .phone, .end
        display none

#area > .auth-norwaydeposit
    states finished

    .payment-details
        font-size 1.4em

        .row
            margin-top 2em

#area > .auth-cip
    states finished

.is-area-register
.is-area-login
.is-area-resetpassword
    > .top
        display none

    footer, hr
        display none

.is-area-register
.is-area-login
    background: url('img/registerbg.jpg')  no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

.is-area-verifyphone
.is-area-norwaydeposit
.is-area-cip
    footer, .top
        display none

@media (max-width: 500px)
    #area > .auth-login
    #area > .auth-register
        border-radius: 0
        padding: 20px
        border: 0
        margin: 0

    #area > .auth-register .register-form input[type="text"], 
    #area > .auth-register .register-form input[type="email"]
    #area > .auth-register .register-form input[type="password"]
        width: 100%

    #area > .auth-register .register-form button
        width: 100%